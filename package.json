{
    "name":            "psd2pptx",
    "version":         "0.9.5",
    "description":     "Convert Photoshop (PSD) layers to PowerPoint (PPTX) slides",
    "author":          "Dr. Ralf S. Engelschall",
    "license":         "MIT",
    "bin": {
        "psd2pptx":    "psd2pptx.js"
    },
    "dependencies": {
        "psd.js":      "3.3.3-beta.7",
        "jimp":        "0.8.5",
        "bluebird":    "3.7.1",
        "pptxgenjs":   "2.6.0",
        "zip-process": "0.2.6",
        "yargs":       "14.2.0",
        "execa":       "3.2.0",
        "chalk":       "2.4.2",
        "tmp":         "0.1.0"
    },
    "devDependencies": {
        "upd":         "2.6.2",
        "pkg":         "4.4.0"
    },
    "scripts": {
        "update":      "upd",
        "package":     "pkg -t node12-linux-x64,node12-win-x64 .",
        "test":        "node psd2pptx.js -v -o sample.pptx sample.psd"
    }
}
